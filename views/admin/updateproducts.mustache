<div class="container">
  <h1>Update Your Products</h1>
    <div class="row">
        <form action='/updateproducts' method='POST'>
              <label for="productCategory">Product Category</label>
              <div class="input-field">
                <select id="productCategoryID" class="browser-default" name="productCategoryID">
                  <option value="" disabled selected>Choose your option</option>
                  {{#cats}}
                  <option name="productCategoryID" value={{id}}>{{productCategory}} | {{productGender}}</option>
                  {{/cats}}
                </select>
              </div>
            </div>
            <div class="input-field">
                <i class="small material-icons prefix">accessibility</i>
                <input id="productName" type="text" name="productName" />
                <label for="productName">Product Name</label>
            </div>
            <div class="input-field">
                <i class="small material-icons prefix">add_to_photos</i>
                <input id="productSize" type="text" name="productSize" />
                <label for="productSize">Product Size</label>
            </div>
            <div class="input-field">
                <i class="small material-icons prefix">monetization_on</i>
                <input id="productPrice" type="text" name="productPrice" />
                <label for="productPrice">Product Price</label>
            </div>
            <div class="input-field">
                <i class="small material-icons prefix">palette</i>
                <input id="productColor" type="text" name="productColor" />
                <label for="productColor">Product Color</label>
            </div>
            <div class="input-field">
                <i class="small material-icons prefix">photo_camera</i>
                <input id="productURL" type="text" name="productURL" />
                <label for="productURL">Product Image URL</label>
            </div>
            <div class="input-field">
                <i class="small material-icons prefix">plus_one</i>
                <input id="productQuantity" type="text" name="productQuantity" />
                <label for="productQuantity">Product Quantity</label>
            </div>
            <button class="btn-large waves-effect waves-light" type="submit" name="action">
                Submit
                <i class="material-icons right">send</i>
            </button>
        </form>
    </div>
</div>

