    <div class="nav-wrapper">
      <a href="../index" class="brand-logo">Stylephile</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="../index">Back to home</a></li>
        <li><a href="./cart"><i class='material-icons'>shopping_cart</i></a></li>
        <li><form action="/logOut" method="post">
          <a><button class="btn-flat white-text">Log Out</button></a>
        </form></li>
      </ul>
    </div>
  </nav>

<!-- Hamburger -->
  <ul class="sidenav" id="mobile-demo">
    <li>
      <div class="background">
        <img src="https://i.imgur.com/Hh7vjNX.jpg">
      </div>
    </li>
    <li><a href="../index">Home</a></li>
    <li><a href="./cart">Cart</a></li>
    <li><form action="/logOut" method="post">
      <a><button>Logout</button></a>
    </form></li>
  </ul>


<!-- girl on floor tee parallax -->
  <div class="parallax-container" width="100%">
    <div class="parallax"><img src="https://i.imgur.com/zEu81YF.jpg"></div>
  </div>

<div class="real-body">
<!-- Product Cards -->
<div class="cards-container">

  <div class="row">
      {{#list}}
        <div class="card z-depth-4 grid-effect-2 animate">
          <div class="card-image">
            <img src="{{productURL}}">
            <span class="card-title">{{productName}}</span>
          </div>
              <form action="/addToCart" method="post">
                <input type="hidden" name="productID" value="{{id}}" />
                <input type="hidden" name="name" value="{{productName}}" />
                <input type="hidden" name="price" value="{{productPrice}}" />
                <input type="hidden" name="size" value="{{productSize}}" />
                <input type="hidden" name="color" value="{{productColor}}" />
                <input type="hidden" name="productQuantity" value="{{productQuantity}}" />
                <div class="card-content" height="30px">
                  <p>Price: ${{productPrice}}  |  Color: {{productColor}}  |  Product Size: {{productSize}}</p>
                </div>
                <div class="row">
                  <div class="col s10">
                      <select name="quantityToCart">
                        <option value="0" disabled selected>Qty</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                      </select>
                  </div>
                  <div class="col s1">
                    <button onclick="M.toast({html: 'Added to cart!'})" class="btn-floating waves-effect waves-light red accent-2"><i class="material-icons">add_shopping_cart</i></button>
                  </div>
                </div>
              </form>
        </div>
      {{/list}}
    </div>
  </div>
</div>


<footer class="page-footer black">
    <div class="container">
      <div class="row">
        <div class="col l6 s12">
          <h5 class="white-text">Stylephile</h5>
          <p class="grey-text text-lighten-4">We're your hookup for all of your sartorial needs. We obsessively curate the best and the boldest fashions from around the globe, and bring it straight to you. No matter where you're going, we'll make sure that you arrive there in style.</p>
        </div>
        <div class="col l4 offset-l2 s12">
          <h5 class="white-text">Links</h5>
          <ul>
            <li><a class="grey-text text-lighten-3" href="/index">Home</a></li>
            <li><a class="grey-text text-lighten-3" href="/sessions/productpage">Shop</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="footer-copyright">
      <div class="container">
      Â© 2018 Dream Team
      <a class="grey-text text-lighten-4 right" href="/adminSignIn">Admin</a>
      </div>
    </div>
  </footer>

</body>
